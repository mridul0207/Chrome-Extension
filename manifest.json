{
    "manifest_version": 3,
    "name": "Reading time",
    "description": "A Chrome extension which tells the title of the current tab",
    "version": "1.0",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
          "matches": ["*://*/*"],
          "js": ["contentscript.js"]
        }
    ]
}